# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.


VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  # Proxy settings to use inside a corporate network
  # Install the proxy plugin using "vagrant plugin install vagrant-proxyconf"
  if Vagrant.has_plugin?("vagrant-proxyconf")
    config.proxy.http = "http://QUEST-GLOBAL%5C1017141:QuestSep171@proxy-tvm.quest-global.com:8080"
    config.proxy.https = "http://QUEST-GLOBAL%5C1017141:QuestSep171@proxy-tvm.quest-global.com:8080"
    # config.proxy.no_proxy = "localhost, 192.168.56.*"
  end

  config.vm.define "acs" do |acs|

    # Every Vagrant development environment requires a box. You can search for
    # boxes at https://atlas.hashicorp.com/search.
    acs.vm.box = "ubuntu-trusty64"
    # acs.vm.box_url = "https://app.vagrantup.com/ubuntu/boxes/trusty64"

    acs.vm.hostname = "acs"

    # Create a private network, which allows host-only access to the machine
    # using a specific IP.
    acs.vm.network "private_network", ip: "192.168.33.10"

    # config.vm.synced_folder "../data", "/vagrant_data"

    acs.vm.provider :virtualbox do |vb|
      # Don't boot with headless mode
      vb.gui = true

      # Use VBoxManage to customize the VM. For example to change memory:
      vb.customize ["modifyvm", :id, "--memory", "1024", "--resize", "3000"]
    end

    #acs.vm.provision "shell", inline: <<-SHELL
    #  apt-get install vim -y
    #  apt-get install ansible -y
    #SHELL
  end

  config.vm.define "web" do |web|
    web.vm.box = "ubuntu-trusty64"
    web.vm.hostname = "web"
    web.vm.network "private_network", ip: "192.168.33.20"

    web.vm.provider :virtualbox do |vb|
      vb.gui = true
      vb.customize ["modifyvm", :id, "--memory", "1024", "--resize", "3000"]
    end

    #web.vm.provision "shell", inline: <<-SHELL
    #  apt-get install vim -y
    #  apt-get install ansible -y
    #SHELL
  end
end
